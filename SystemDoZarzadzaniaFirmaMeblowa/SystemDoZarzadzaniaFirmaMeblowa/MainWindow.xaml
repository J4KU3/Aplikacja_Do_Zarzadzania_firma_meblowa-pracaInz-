<Window x:Class="SystemDoZarzadzaniaFirmaMeblowa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemDoZarzadzaniaFirmaMeblowa"
        xmlns:Vm ="clr-namespace:SystemDoZarzadzaniaFirmaMeblowa.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <Vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <TabControl Margin="0,-25,0.333,-0.333" SelectedIndex="{Binding SelectedPage}">
            <TabItem Header="LoginPage">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="206*"/>
                        <ColumnDefinition Width="581*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1" Margin="0,0,-0.333,0.333">
                        <Image Source="Zdjecie1.jpg" Width="auto" Height="auto" Margin="-46,-21,-58,-12"/>
                    </Grid>
                    <Grid Grid.Column="0" Background="#FFBFBCBC" Margin="-2,-2,0,-11.667" >
                        <Button Command="{Binding loginCommand}" Content="Zaloguj" Margin="10,0,12,34" VerticalAlignment="Bottom" Height="53" Style="{StaticResource LoginButtonStyle}"/>
                        <TextBox Style="{StaticResource LoginTextBoxStyle}" Height="52" Margin="10,111,12,0" TextWrapping="Wrap" Text="{Binding ModelEmployee.Mail}" VerticalAlignment="Top" FontSize="40"/>
                        <Label Content="Login" Margin="10,62,12,0" VerticalAlignment="Top" FontSize="30" Height="49" FontWeight="Bold"/>
                        <Label Content="Hasło" Margin="12,168,10,0" VerticalAlignment="Top" Height="49" FontSize="30" FontWeight="Bold" />
                        <TextBox Style="{StaticResource LoginTextBoxStyle}" Text="{Binding ModelEmployee.Password}" Margin="12,222,12,0" VerticalAlignment="Top" Height="52" FontSize="40"/>


                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="HomePage" >

                <Grid  Margin="-11,-3,-2.333,-8.667">
                    <Image Source="Zdjecie2.jpg" Margin="-165,-409,-418,-33"/>


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="3">
                            <Button Style="{StaticResource MainButtonStyle}" Content="Wyjdź" Margin="10,0,21,13.333" VerticalAlignment="Bottom" Height="44" Command="{Binding exitCommand}"/>
                            <Button Style="{StaticResource MainButtonStyle}" Content="Wyloguj" Margin="10,0,21,62.333" Command="{Binding changeTabCommand}" CommandParameter="0" Height="44" VerticalAlignment="Bottom"/>

                        </Grid>
                        <Grid Grid.Column="0">
                            <Button Style="{StaticResource MainButtonStyle}" Content="Zarządzaj  &#xD;&#xA;Pracownikami" Margin="10,10,10,10.333" Command="{Binding changeTabCommand}" CommandParameter="2" />

                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Style="{StaticResource MainButtonStyle}" Grid.Row="0" Content="Zarządzaj &#xD;&#xA;zamówieniami" Margin="10,10,10,1.333" Command="{Binding changeTabCommand}" CommandParameter="3"/>
                            <Button Style="{StaticResource MainButtonStyle}" Grid.Row="1" Content="Złóż &#xD;&#xA;zamówienie" Margin="10,8.667,10,7.667" Command="{Binding changeTabCommand}" CommandParameter="4" />
                            <Button Style="{StaticResource MainButtonStyle}" Grid.Row="2" Content="Generuj &#xD;&#xA;Raport" Margin="10,0.333,10,10.333"/>

                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Style="{StaticResource MainButtonStyle}" Grid.Row="0" Content="Dodaj &#xD;&#xA;Reklamacje" Margin="10,10,10,9.667"/>
                            <Button Style="{StaticResource MainButtonStyle}" Content="Zarządzaj &#xD;&#xA;reklamacjami " Margin="10,10.333" Grid.Row="1"/>

                        </Grid>

                    </Grid>


                </Grid>

            </TabItem>
            <TabItem Header="Pracownicy">
                <Grid>
                    <Image Source="Zdjecie2.jpg" Margin="-165,-409,-418,-33"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="607*"/>
                            <ColumnDefinition Width="180*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <DataGrid Height="296" Margin="10,10,9.667,0" VerticalAlignment="Top" ItemsSource="{Binding ListOfEmployee}" SelectedItem="{Binding SelectedEmployee}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Id" Binding="{Binding employeeID}"/>
                                    <DataGridTextColumn Header="Imię" Binding="{Binding EFirstName}"/>
                                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding ELastName}"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}"/>
                                    <DataGridTextColumn Header="Mail" Binding="{Binding Mail}"/>
                                    <DataGridTextColumn Header="Hasło" Binding="{Binding Password}"/>
                                    <DataGridTextColumn Header="Funkcje Admina" Binding="{Binding IsAdmin}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>
                        <Grid Grid.Column="1">
                            <Button Style="{StaticResource AddButtonStyle}" Content="Dodaj Pracownika" Margin="10,10,10,0" VerticalAlignment="Top" Height="46" Command="{Binding openEmployeeWidnowCommand}"/>
                            <Button Style="{StaticResource DeleteButtonStyle}" Content="Usuń Pracownika" Margin="10,61,10,0" VerticalAlignment="Top" Height="46" Command="{Binding employeeDeleteCommand}"/>
                            <Button Style="{StaticResource EditButtonStyle}" Content="Edytuj Dane" Margin="10,112,10,0" VerticalAlignment="Top" Height="46" Command="{Binding editEmployeeCommand}"/>
                            <Button Style="{StaticResource BackButtonStyle}" Content="Wstecz" Margin="10,0,10,9.333" Height="46" VerticalAlignment="Bottom" Command="{Binding changeTabCommand}" CommandParameter="1"/>

                        </Grid>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Zarządzanie Zamowieniami">
                <Grid>
                    <Viewbox>
                        <Image Source="Zdjecie2.jpg" Margin="-165,-409,-418,-33" Width="1179"/>
                    </Viewbox>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="607*"/>
                            <ColumnDefinition Width="180*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <DataGrid Margin="10,10,9.667,111.333" ItemsSource="{Binding ListOfOrders}" SelectedItem="{Binding SelectedOrder}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Id" Binding="{Binding OrderID}"/>
                                    <DataGridTextColumn Header="IDKlienta" Binding="{Binding ClientID}"/>
                                    <DataGridTextColumn Header="Imię klienta" Binding="{Binding ClientFName}"/>
                                    <DataGridTextColumn Header="Pracownik" Binding="{Binding EmployeeFName}"/>
                                    <DataGridTextColumn Header="Data Zamówienia" Binding="{Binding OrderDate}"/>
                                    <DataGridTextColumn Header="Nazwa Przedmiotu" Binding="{Binding ItemName}"/>
                                    <DataGridTextColumn Header="Kolor" Binding="{Binding ItemColor}"/>
                                    <DataGridTextColumn Header="Projekt" Binding="{Binding Project}"/>
                                    <DataGridTextColumn Header="Cena" Binding="{Binding Price}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>
                        <Grid Grid.Column="1">
                            <Button Style="{StaticResource AddOrdesButtonStyle}" Content="Dodaj Zamowienie" Margin="0,112,10,0" VerticalAlignment="Top" Height="46" Command="{Binding changeTabCommand}" CommandParameter="4"/>
                            <Button Style="{StaticResource DeleteOrdersButtonStyle}" Content="Usuń Zamowienie" Margin="0,173,10,0" VerticalAlignment="Top" Height="46" Command="{Binding deleteOrderCommand}"/>
                            <Button Style="{StaticResource EditOrdersButtonStyle}" Content="Edytuj Zamowienie" Margin="0,224,10,0" VerticalAlignment="Top" Height="46" Command="{Binding editOrderCommand}"/>
                            <Button Style="{StaticResource BackButtonStyle}" Content="Wstecz" Margin="10,0,10,9.333" Height="46" VerticalAlignment="Bottom" Command="{Binding changeTabCommand}" CommandParameter="1"/>
                            <TextBox Style="{StaticResource SearchOrderTextBoxStyle}" Height="46" Margin="0,10,10,0" TextWrapping="Wrap" Text="{Binding ModelOrder.ItemName}" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                            <Button Style="{StaticResource SearchOrderButtonStyle}" Content="Szukaj" Margin="0,61,10,0" VerticalAlignment="Top" Height="46" Command="{Binding searchOrderCommand}"/>

                        </Grid>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Zamówienia">
                <Grid  Margin="-11,-3,-2.333,-8.667">
                    <Image Source="Zdjecie2.jpg" Margin="-165,-409,-418,-33"/>


                   


                </Grid>

            </TabItem>
        </TabControl>

    </Grid>
</Window>
